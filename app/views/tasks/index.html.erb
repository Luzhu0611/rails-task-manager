
<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <% unless task[:completed] == true %>
    <!-- fontawesome check box empty -->
    <i class="fa fa-square-o" aria-hidden="true"></i>
    <!-- else -->
    <% else %>
    <!-- box -->
    <i class="fa fa-check-square-o" aria-hidden="true"></i>
  <% end %>
    <!-- end -->
 <%= link_to task[:title],"#{tasks_path}/#{task.id}"%>
<% end %>

 <%=link_to "Add new task", new_task_path %>
